<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/txtMmappy"
        style="@style/centerblacktext"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:text="M   MAPPY"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMmappy"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_mappy" />

    <EditText
        android:id="@+id/Et01"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/spr_hcnviencam"
        android:drawableEnd="@mipmap/ic_googleplus"
        android:hint="  GOOGLE +"
        android:textColorHint="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/Et02"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Et01"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/spr_hcnviencam"
        android:drawableEnd="@mipmap/ic_facebook"
        android:hint="  FACEBOOK "
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/Et03"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Et02"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/spr_hcnviencam"
        android:drawableEnd="@mipmap/ic_naver"
        android:hint="  NAVER"
        android:textColorHint="@android:color/holo_green_dark" />

    <CheckBox
        style="@style/centerblacktext"
        android:layout_below="@+id/Et03"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Remember Me" />

</RelativeLayout>