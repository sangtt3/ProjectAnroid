<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img01"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@mipmap/img_altis" />


    <TextView
        android:id="@+id/txt01"
        style="@style/centerblacktext"
        android:layout_below="@+id/img01"
        android:layout_margin="10dp"
        android:text="Toyota Corolla Altis 1.8 AT 2016, đủ màu, giá tốt và ưu đãi hấp dẫn nhất Miền Bắc. Liên hệ đặt xe ngay" />

    <TextView
        android:id="@+id/txt02"
        style="@style/centerblacktext"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt01"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:text="3 tỉ 579 triệu"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt01"
        android:layout_marginRight="6dp"
        android:background="@drawable/spr_hcnviencam"
        android:text="Chi Phí Lăn Bánh"
        android:textColor="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/txt03"
        style="@style/centerblacktext"
        android:layout_below="@id/txt02"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="Mã Tin :                                     260412" />

    <TextView
        android:id="@+id/txt04"
        style="@style/centerblacktext"
        android:layout_below="@id/txt03"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Địa Điểm :                                 Hà Nội" />

    <TextView
        android:id="@+id/txt05"
        style="@style/centerblacktext"
        android:layout_below="@id/txt04"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Tình trạng xe :                          Mới" />

    <TextView
        android:id="@+id/txt06"
        style="@style/centerblacktext"
        android:layout_below="@id/txt05"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Xuất xứ :                                    Trong nước" />

    <TextView
        android:id="@+id/txt07"
        style="@style/centerblacktext"
        android:layout_below="@id/txt06"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Kiểu dáng :                                Sport" />

    <TextView
        android:id="@+id/txt08"
        style="@style/centerblacktext"
        android:layout_below="@id/txt07"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Năm sản xuất :                         2016" />

    <TextView
        android:id="@+id/txt09"
        style="@style/centerblacktext"
        android:layout_below="@id/txt08"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Ngày đăng :                              26/04/2012" />


</RelativeLayout>