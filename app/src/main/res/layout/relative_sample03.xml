<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Rl01"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_purple">

        <ImageView
            android:id="@+id/img01"
            style="@style/baseImage"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            style="@style/baseText"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:text="Twitter"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Rl01">

        <TextView
            android:id="@+id/txtFullName"
            style="@style/baseText"
            android:layout_margin="5dp"
            android:text="FullName" />

        <EditText
            android:id="@+id/Et01"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/txtFullName"
            android:layout_margin="10dp"
            android:background="@drawable/spr_hcnviencam" />

        <TextView
            android:id="@+id/txtEmail"
            style="@style/baseText"
            android:layout_below="@+id/Et01"
            android:layout_margin="5dp"
            android:text="Email" />

        <EditText
            android:id="@+id/Et02"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtEmail"
            android:layout_margin="10dp"
            android:background="@drawable/spr_hcnviencam" />

        <TextView
            android:id="@+id/txtPassWord"
            style="@style/baseText"
            android:layout_below="@+id/Et02"
            android:layout_margin="5dp"
            android:text="PassWord" />

        <EditText
            android:id="@+id/Et03"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtPassWord"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/spr_hcnviencam" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/basebutton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/Et03"
            android:layout_margin="10dp"
            android:background="@drawable/spr_buttonnenghiviencam"
            android:text="Register New Account" />

        <TextView
            style="@style/baseText"
            android:layout_below="@id/btnRegister"
            android:layout_centerInParent="true"
            android:text="Already has account ? Login here"
            android:textColor="@android:color/holo_blue_dark" />


    </RelativeLayout>

</RelativeLayout>